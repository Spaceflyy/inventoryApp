<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="stylesheet" href="/styles.css" />
		<style>
			@import url("https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap");
		</style>
		<title><%= title %></title>
	</head>
	<%- include('./partials/nav') %>
	<body>
		<h1><%= title %></h1>

		<% items.forEach((item) => { %> <% switch (type) { case 'game': %>
		<h2><%-item.game_name %></h2>
		<h3><%-item.release_date.toString().slice(0, 15)%></h3>
		<form action="/delete/<%=item.id %>" method="POST" style="display: inline">
					<button
						type="submit"
						onclick="return confirm('Are you sure you want to remove this game?');"
					>
						Delete
					</button>
				</form>
				
 <a href="/update/<%=item.id%>"><button>Edit</button></a>
		<% break; case 'genre': %>
		<h2><a href=<%= `/genres/${escape(item.genre)}` %> ><%-item.genre %> (<%-item.count%>)</a> </h2>
		<% break; case 'developer': %>
		<h2><a href=<%= `/developers/${escape(item.developer)}` %> ><%-item.developer%> (<%-item.count%>)</a> </h2>
	
		<% break;}%> <% }); %>
	</body>
</html>
